@page "/register"
@layout MainLayout
@attribute [AllowAnonymous]
@inject Microsoft.Extensions.Localization.IStringLocalizer<Register> _localizer

<EditForm Model="@_registerUserModel" OnValidSubmit="SubmitAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <RadzenStack>
        <RadzenRow xs="12">
            <div class="d-flex justify-center">
                <RadzenIcon Icon="@CustomIcons.BlazorHero" Color="Color.Primary" Size="Size.Large" ViewBox="0 0 500 500" Style="width: 100px; height: 100px;" />
            </div>
        </RadzenRow>
        <RadzenRow xs="12">
            <div class="d-flex justify-center">
                <RadzenText Typo="Typo.h4">@_localizer["Register"]</RadzenText>
            </div>
        </RadzenRow>
        <RadzenRow xs="12">
            <div class="d-flex justify-center">
                <RadzenText>@_localizer["Already have an account?"] <MudLink Href="/login">@_localizer["Sign In"]</MudLink></RadzenText>
            </div>
        </RadzenRow>
        <RadzenRow xs="12">
            <RadzenTextArea For="@(() => _registerUserModel.UserName)" @bind-Value="_registerUserModel.UserName" Label="@_localizer["User Name"]" />
        </RadzenRow>
        <RadzenRow xs="12" sm="6" md="6">
            <RadzenTextArea For="@(() => _registerUserModel.FirstName)" @bind-Value="_registerUserModel.FirstName" Label="@_localizer["First Name"]" />
        </RadzenRow>
        <RadzenRow xs="12" sm="6" md="6">
            <RadzenTextArea For="@(() => _registerUserModel.LastName)" @bind-Value="_registerUserModel.LastName" Label="@_localizer["Last Name"]" />
        </RadzenRow>
        <RadzenRow xs="12" sm="6" md="6">
            <RadzenTextArea T="string" Label="@_localizer["E-mail"]" @bind-Value="_registerUserModel.Email" For="@(() => _registerUserModel.Email)" />
        </RadzenRow>
        <RadzenRow xs="12" sm="6" md="6">
            <RadzenTextArea T="string" Label="@_localizer["Phone Number"]" @bind-Value="_registerUserModel.PhoneNumber" For="@(() => _registerUserModel.PhoneNumber)" />
        </RadzenRow>
        <RadzenRow xs="12" sm="6" md="6">
            <RadzenTextArea For="@(() => _registerUserModel.Password)" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" @bind-Value="_registerUserModel.Password" Label="@_localizer["Password"]" />
        </RadzenRow>
        <RadzenRow xs="12" sm="6" md="6">
            <RadzenTextArea For="@(() => _registerUserModel.ConfirmPassword)" InputType="InputType.Password" @bind-Value="_registerUserModel.ConfirmPassword" Label="@_localizer["Confirm Password"]" />
        </RadzenRow>
        <RadzenRow xs="12" Class="d-flex justify-center">
            <RadzenButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Disabled="@(!Validated)" Color="Color.Primary" Style="width: 100%;">@_localizer["Register"]</RadzenButton>
        </RadzenRow>
    </RadzenStack>
</EditForm>