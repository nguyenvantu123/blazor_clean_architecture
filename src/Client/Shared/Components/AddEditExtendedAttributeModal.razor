@using BlazorHero.CleanArchitecture.Domain.Enums
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditExtendedAttributeModalLocalization> _localizer

@typeparam TId
@typeparam TEntityId
@typeparam TEntity
@typeparam TExtendedAttribute

<EditForm Model="@AddEditExtendedAttributeModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <RadzenDialog>
        <RadzenStack>
            @{
                if (AddEditExtendedAttributeModel.Id.Equals(default))
                {
                    <RadzenText Typo="Typo.h6">
                        <RadzenIcon Icon="add" Class="mr-3 mb-n1" />
                        @_localizer["Add Extended Attribute"]
                    </RadzenText>
                }
                else
                {
                    <RadzenText Typo="Typo.h6">
                        <RadzenIcon Icon="update" Class="mr-3 mb-n1" />
                        @_localizer["Update Extended Attribute"]
                    </RadzenText>
                }
            }
        </RadzenStack>
        <RadzenStack>
            <RadzenStack>
                @if (AddEditExtendedAttributeModel.Id.Equals(default) != true)
                {
                    <RadzenColumn xs="12" md="6">
                        <RadzenText Disabled For="@(() => AddEditExtendedAttributeModel.Id)" @bind-Value="AddEditExtendedAttributeModel.Id" Label="@_localizer["Id"]" />
                        </RadzenColumn>
                }
                <RadzenColumn xs="12" md="6">
                    @*<RadzenTextArea Disabled @bind-Value="AddEditExtendedAttributeModel.EntityId" Label="@_localizer["Entity Id"]" />*@
                  @*  <RadzenText Disabled For="@(() => AddEditExtendedAttributeModel.EntityId)" @bind-Value="AddEditExtendedAttributeModel.EntityId" Label="@_localizer["Entity Id"]" />*@
                    <RadzenText Disabled For="@(() => AddEditExtendedAttributeModel.EntityId)" @bind-Value="AddEditExtendedAttributeModel.EntityId" Label="@_localizer["Entity Id"]" />
                </RadzenColumn>
                <RadzenColumn xs="12" md="6">
                    <RadzenCheckBoxList Label="@_localizer["Type"]" For="@(() => AddEditExtendedAttributeModel.Type)" @bind-Value="AddEditExtendedAttributeModel.Type" Variant="Variant.Filled">
                        @foreach (var typeName in Enum.GetNames(typeof(EntityExtendedAttributeType)))
                        {
                            <RadzenCheckBoxListItem Value="@(Enum.GetValues<EntityExtendedAttributeType>().FirstOrDefault(x => x.ToString() == typeName))">@typeName</RadzenCheckBoxListItem>
                        }
                    </RadzenCheckBoxList>
                </RadzenColumn>
                <RadzenColumn xs="12" md="6">
                    <RadzenTextArea For="@(() => AddEditExtendedAttributeModel.Key)" @bind-Value="AddEditExtendedAttributeModel.Key" Label="@_localizer["Key"]" />
                </RadzenColumn>
                @if (AddEditExtendedAttributeModel.Type == EntityExtendedAttributeType.Decimal)
                {
                    <RadzenColumn xs="12" md="6">
                        <RadzenNumeric For="@(() => AddEditExtendedAttributeModel.Decimal)" @bind-Value="AddEditExtendedAttributeModel.Decimal" Label="@_localizer["Decimal"]" />
                    </RadzenColumn>
                }
                else if (AddEditExtendedAttributeModel.Type == EntityExtendedAttributeType.Text)
                {
                    <RadzenColumn xs="12" md="6">
                        <RadzenTextArea For="@(() => AddEditExtendedAttributeModel.Text)" @bind-Value="AddEditExtendedAttributeModel.Text" Label="@_localizer["Text"]" />
                    </RadzenColumn>
                }
                else if (AddEditExtendedAttributeModel.Type == EntityExtendedAttributeType.DateTime)
                {
                    <RadzenColumn xs="12" md="6">
                        <RadzenDatePicker @bind-Value="AddEditExtendedAttributeModel.DateTime" ShowTime="true" DateFormat="MM/dd/yyyy" Label="@_localizer["Date"]">
                            @*  <PickerActions>
                        <RadzenButton Class="mr-auto align-self-start" OnClick="@(() => _datePicker.Clear())">@_localizer["Clear"]</RadzenButton>
                        <RadzenButton OnClick="@(() => _datePicker.Close(false))">@_localizer["Cancel"]</RadzenButton>
                        <RadzenButton Color="Color.Primary" OnClick="@(() => _datePicker.Close())">@_localizer["Ok"]</RadzenButton>
                        </PickerActions>*@
                        </RadzenDatePicker>

                        <RadzenDatePicker ShowTime="true" TimeOnly="true" Label="@_localizer["Time"]" @bind-Value="_time">
                            @* <PickerActions>
                        <RadzenButton Class="mr-auto align-self-start" OnClick="@(() => _timePicker.Clear())">@_localizer["Clear"]</RadzenButton>
                        <RadzenButton OnClick="@(() => _timePicker.Close(false))">@_localizer["Cancel"]</RadzenButton>
                        <RadzenButton Color="Color.Primary" OnClick="@(() => _timePicker.Close())">@_localizer["Ok"]</RadzenButton>
                        </PickerActions>*@
                        </RadzenDatePicker>
                    </RadzenColumn>
                }
                else if (AddEditExtendedAttributeModel.Type == EntityExtendedAttributeType.Json)
                {
                    <RadzenColumn xs="12" md="6">
                        <RadzenTextArea For="@(() => AddEditExtendedAttributeModel.Json)" @bind-Value="AddEditExtendedAttributeModel.Json" Label="@_localizer["Json"]" Variant="Variant.Outlined" Lines="10" />
                    </RadzenColumn>
                }
                <RadzenColumn xs="12" md="6">
                    <RadzenTextArea T="string" For="@(() => AddEditExtendedAttributeModel.ExternalId)" @bind-Value="AddEditExtendedAttributeModel.ExternalId" Label="@_localizer["External Id"]" />
                </RadzenColumn>
                <RadzenColumn xs="12" md="6">
                    <RadzenTextArea T="string" For="@(() => AddEditExtendedAttributeModel.Group)" @bind-Value="AddEditExtendedAttributeModel.Group" Label="@_localizer["Group"]" />
                </RadzenColumn>
                <RadzenColumn xs="12" md="6">
                    <RadzenTextArea For="@(() => AddEditExtendedAttributeModel.Description)" @bind-Value="AddEditExtendedAttributeModel.Description" Label="@_localizer["Description"]" />
                </RadzenColumn>
                <RadzenColumn xs="12" md="6">
                    <RadzenCheckBox For="@(() => AddEditExtendedAttributeModel.IsActive)" @bind-Value="@AddEditExtendedAttributeModel.IsActive" Color="Color.Secondary" Label="@_localizer["Is Active"]" />
                </RadzenColumn>
            </RadzenStack>
        </RadzenStack>
        <RadzenStack>
            <RadzenButton Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</RadzenButton>
            @if (AddEditExtendedAttributeModel.Id.Equals(default) != true)
            {
                <RadzenButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</RadzenButton>
            }
            else
            {
                <RadzenButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</RadzenButton>
            }
        </RadzenStack>
    </RadzenDialog>
</EditForm>